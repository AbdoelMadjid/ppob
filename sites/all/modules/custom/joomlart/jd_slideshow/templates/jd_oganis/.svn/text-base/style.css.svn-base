.jd-slideshow-wrap {
	position: relative;
}

/* Slideshow Item ---*/
.ss-item {
	background-color: #f6f7f8;
}

/* Slideshow Item Description ---*/
.ss-desc-wrap {
	display: block;
	overflow: hidden;
	width: 40%;
	height: auto;
	bottom: 60px;
	right: 0;
	box-shadow: -1px 0 3px #000;
	-moz-box-shadow: -1px 0 3px #000;
	-webkit-box-shadow: -1px 0 3px #000;
}

.ss-desc {
	padding: 15px 20px;
	background: #333;
	color: #f6f7f8;
	text-align: left;
}

.ss-desc h3 {
	font-size: 225%;
	font-weight: bold;
	margin: 0;
	font-family: Helvetica, Arial, sans-serif;
	letter-spacing: -1px;
}

.ss-desc p {
	margin: 10px 0 0;
	font-size: 100%;
	font-family: Helvetica, Arial, sans-serif;
}

/* Slideshow Navigation ---*/
.jd-slideshow-nav {
	bottom: 10px;
	left: 10px;
	box-shadow: -1px 0 3px #000;
	-moz-box-shadow: -1px 0 3px #000;
	-webkit-box-shadow: -1px 0 3px #000;
}

.jd-slideshow-nav ul.nav-list {
	background: #333;
	color: #cdcdcd;
	padding: 0;
}

.jd-slideshow-nav ul.nav-list li {
	margin: 0;
	padding: 0;
	background: none;
}

.jd-slideshow-nav li a {
	padding: 3px 6px;
	color: #cdcdcd;
	text-decoration: none;
	font-size: 92%;
	text-transform: uppercase;
	font-family: Helvetica, Arial, sans-serif;
	outline: none;
}

.jd-slideshow-nav li a:hover,
.jd-slideshow-nav li a:active,
.jd-slideshow-nav li a:focus {
	color: #fff;
	background: #666;
}

.jd-slideshow-nav li.nav-current a {
	color: #fff;
	background: #EF3711;
}

.jd-slideshow-nav li.nav-before span,
.jd-slideshow-nav li.nav-after span {
	color: #666;
	padding: 0 6px;
}

/* Control */
.jd-slideshow-nav ul.nav-control {
	border-left: 1px solid #666;
	background: #333;
	color: #cdcdcd;
	padding: 0;
}

.jd-slideshow-nav ul.nav-control li {
	margin: 0;
	padding: 0;
	background: none;
}

.jd-slideshow-nav ul.nav-control li a {
	padding: 3px 6px;
	color: #cdcdcd;
	text-decoration: none;
	font-size: 92%;
	text-transform: uppercase;
	font-family: Helvetica, Arial, sans-serif;
	outline: none;
}

/* Slideshow Thumbnail ---*/

.jd-slideshow-thumb {
	bottom: 10px;
	right: 10px;
	position: absolute;
	overflow: hidden;
}

.jd-slideshow-thumb ul {
	background: none;
	color: #cdcdcd;
	padding: 0;
}

.jd-slideshow-thumb li {
	background: none !important;
	float: left;
	margin: 0 !important;
	padding: 0 7px !important;
}

.jd-slideshow-thumb li.first {
	padding-left: 0 !important;
}

.jd-slideshow-thumb li.last {
	padding-right: 0 !important;
}

.jd-slideshow-thumb li a {
	padding: 5px;
	color: #cdcdcd;
	text-decoration: none;
	font-size: 92%;
	text-transform: uppercase;
	font-family: Helvetica, Arial, sans-serif;
	outline: none;
	background: #fff;
	float: left;
}

.jd-slideshow-thumb li a:hover,
.jd-slideshow-thumb li a:active,
.jd-slideshow-thumb li a:focus {
	color: #fff;
	background: #666;
}

.jd-slideshow-thumb li.thumb-current a {
	color: #fff;
}

.jd-slideshow-thumb li.thumb-before span,
.jd-slideshow-thumb li.thumb-after span {
	color: #666;
	padding: 0 6px;
}

.thumb-mask {
	top: 0;
	left: 0;
	position: absolute; 
	width: 100%;
	height: 100%;
}

.thumb-mask-item {
	background: #ccc; 
	height: 50px;
	position: absolute; 
}

.thumb-mask-first {
	width: 55px;
	left: 0;
}

.thumb-mask-last {
	width: 110px;
	right: 0;
}

.thumb-mask-current {
	width: 50px;
	height: 50px;
	position: absolute; 
	left: 55px;
	background: none;
}

.ja-slide-thumbs-handles {
	width: 250px;
}

.ja-slide-thumbs-handles span {
	display: block;
	float: left;
	cursor: pointer;
	padding: 0 7px !important;
}

.ja-slide-thumbs-handles span.first {
	padding-left: 0 !important;
}

.ja-slide-thumbs-handles span.last {
	padding-right: 0 !important;
}