/* Slideshow backend */
table.tablelist {
	border-collapse: collapse;
	border: 1px solid #ccc;
}

table.tablelist td {
	text-align: left;
	border: 1px solid #ccc;
}

table.tablelist th {
	border: 1px solid #ccc;
	text-align: left;
	padding-left: 10px;
}

/* Slideshow front */
.jd-slideshow-wrap {
	
}

.jd-slideshow {
	position: relative;
	display: block;
	overflow: hidden;
}

/* Slideshow Item ---*/
.ss-item {
	background-repeat: no-repeat;
	position: absolute;
	top: 0;
	left: 0;
}

/* Slideshow Item Description ---*/
.ss-desc-wrap {
	display: block;
	overflow: hidden;
	position: absolute;
}

.ss-desc {
	
}

/* Slideshow Navigation ---*/
.jd-slideshow-nav {
	position: absolute;
	width: auto;
	height: auto;
}

.jd-slideshow-nav ul {
	margin: 0;
	padding: 0;
	list-style: none;
	display: block;
	float: left;
	overflow: hidden;
}

.jd-slideshow-nav li {
	margin: 0;
	padding: 0;
	display: block;
	float: left;
}

.jd-slideshow-nav li a {
	display: block;
}

.jd-slideshow-nav li.nav-before span,.jd-slideshow-nav li.nav-after span
	{
	display: block;
}

/* Control */
.jd-slideshow-nav ul.nav-control {
	
